#include <stdio.h>

int main() {
    // 1D Array 
    char CustomerID[20];
    char Customer_Name[50];
    int Units_consumed;

    // 2D Array 
    float Unit_charges[4][2] = {
        {199, 1.20}, 
        {400, 1.50},  
        {600, 1.80},  
        {999999, 2.00}  
    };

    // 3D Array  
    float results[1][1][3]; 

    //Customer details
    printf("Enter the Customer ID: ");
    scanf("%s", CustomerID);
    printf("Enter the Customer's Name: ");
    scanf("%s", Customer_Name);
    printf("Enter the Units Consumed: ");
    scanf("%d", &Units_consumed);

    // Calculating charges based on unit consumed
    float charge_per_unit = 0;
    float total_bill = 0;
    if (Units_consumed <= Unit_charges[0][0]) {
        charge_per_unit = Unit_charges[0][1];
    } else if (Units_consumed <= Unit_charges[1][0]) {
        charge_per_unit = Unit_charges[1][1];
    } else if (Units_consumed <= Unit_charges[2][0]) {
        charge_per_unit = Unit_charges[2][1];
    } else {
        charge_per_unit = Unit_charges[3][1];
    }

    total_bill = Units_consumed * charge_per_unit;

    if (total_bill > 400) {
        total_bill += total_bill * 0.15;
    }

    if (total_bill < 100) {
        total_bill = 100;
    }

    // Store results in 3D array
    results[0][0][0] = Units_consumed; 
    results[0][0][1] = charge_per_unit;
    results[0][0][2] = total_bill;

    printf("\n--- Electricity Bill ---\n");
    printf("Customer ID: %s\n", CustomerID);
    printf("Customer Name: %s\n", Customer_Name);
    printf("Units Consumed: %d\n", Units_consumed);
    printf("Charge per Unit: %.2f\n", results[0][0][1]);
    printf("Total Amount to Pay: %.2f\n", results[0][0][2]);

    return 0;
}
